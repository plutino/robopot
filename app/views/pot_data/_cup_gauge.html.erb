<%= javascript_tag do %>
    google.load('visualization', '1', {packages:['gauge']});
    google.setOnLoadCallback(drawGauge);

    function drawGauge() {
        var data = google.visualization.arrayToDataTable([
            ['Label', 'Value'],
            ['Cups Left', 0]
        ]);

        var options = {
            width: 500,
            height: 500,
            //animation: {duration: 400, easing: 'inAndOut'},
            backgroundColor: { fill: "none" },
            majorTicks: ['0',2,4,6,8,10],
            minorTicks: 2,
            min: 0,
            max: 10,
            redFrom: 0,
            redTo: 2,
            yellowFrom: 2,
            yellowTo: 8,
            greenFrom: 8,
            greenTo: 10
        };

        var chart = new google.visualization.Gauge(document.getElementById('gauge_div'));
        chart.draw(data, options);

    setInterval(get_level, 1000);
    function get_level(){
    jQuery.get("/get_level", function(level_hash) {
    console.log(level_hash.level);
    data.setValue(0,1, level_hash.level);
            chart.draw(data, options);

    //drawGauge(level_hash.level);
    });
    };

        }


<% end %>

<td id='gauge_div' />
